sap.ui.define([                                                                                                                                                                                                                                                
    "sap/ui/core/mvc/Controller",                                                                                                                                                                                                                              
    "sap/ui/model/json/JSONModel",                                                                                                                                                                                                                             
    "sap/ui/model/Filter"                                                                                                                                                                                                                                      
],                                                                                                                                                                                                                                                             
    /**                                                                                                                                                                                                                                                        
     * @param {typeof sap.ui.core.mvc.Controller} Controller                                                                                                                                                                                                   
     */                                                                                                                                                                                                                                                        
    function (Controller, JSONModel, Filter) {                                                                                                                                                                                                                 
        "use strict";                                                                                                                                                                                                                                          
                                                                                                                                                                                                                                                               
        return Controller.extend("sync.zca01od01.controller.View1", {                                                                                                                                                                                          
            onInit: function () {                                                                                                                                                                                                                              
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
            },                                                                                                                                                                                                                                                 
            onSelect :function(oEvent){&nbsp;                                                                                                                                                                                                                  
                //oEvent 사용해서 하기                                                                                                                                                                                                                               
                let sItem = oEvent.getParameter("selectedItem");                                                                                                                                                                                               
                let sKey = sItem.getBindingContext().getProperty("Carrid");                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
                let sTable = this.getView().byId("idTable");                                                                                                                                                                                                   
                let oFilter = new Filter(                                                                                                                                                                                                                      
                    "Carrid", "EQ", sKey                                                                                                                                                                                                                       
                );                                                                                                                                                                                                                                             
                sTable.getBinding("items").filter(oFilter);                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               
                // //oEvent 없이 출력                                                                                                                                                                                                                              
                // let selectKey = this.getView().byId("idComboBox").getSelectedKey();                                                                                                                                                                         
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                               
                // let sTable = this.getView().byId("idTable");                                                                                                                                                                                                
                // let oFilter = new Filter(                                                                                                                                                                                                                   
                //     "Carrid", "EQ", selectKey                                                                                                                                                                                                               
                // );                                                                                                                                                                                                                                          
                //테이블에 사용해보기                                                                                                                                                                                                                                   
                //sTable.getBinding("items").filter(oFilter);                                                                                                                                                                                                  
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                       
            },                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                               
            onSearch: function(){ //버튼을 누르면 테이블 나오게 하기                                                                                                                                                                                                         
                let selectKey = this.getView().byId("idComboBox").getSelectedKey();                                                                                                                                                                            
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                               
                let sTable = this.getView().byId("idTable");                                                                                                                                                                                                   
                let oFilter = new Filter(                                                                                                                                                                                                                      
                    "Carrid", "EQ", selectKey                                                                                                                                                                                                                  
                );                                                                                                                                                                                                                                             
                //테이블에 사용해보기                                                                                                                                                                                                                                   
                sTable.getBinding("items").filter(oFilter);                                                                                                                                                                                                    
            }                                                                                                                                                                                                                                                  
        });                                                                                                                                                                                                                                                    
    });                                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               